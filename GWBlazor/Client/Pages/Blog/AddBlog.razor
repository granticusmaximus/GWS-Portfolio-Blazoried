@using GWBlazor.Client.Services
@inject IBlogService service
@inject HttpClient Http
@inject Microsoft.AspNetCore.Components.NavigationManager navigation

<h1>Create A New Blog</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form>
            <div class="form-group">
                <input type="hidden" for="BlogID" class="form-control" @bind="@blog.BlogID" />
            </div>
            <div class="form-group">
                <label asp-for="Designation" class="control-label">Title</label>
                <input for="Designation" class="form-control" @bind="@blog.Title" />
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-default" @onclick="@(async () => await CreateBlog())">Save</button>
                <button class="btn" @onclick="@cancel">Cancel</button>
            </div>
        </form>
    </div>
</div>

@code {

    List<GWBlazor.Shared.Blog> Blogs;
    GWBlazor.Shared.Blog blog;


    protected async Task CreateBlog()
    {
        Blogs = await service.GetAllBlogs();
    }

    void cancel()
    {
        navigation.NavigateTo("/Blog/Index");
    }
}
