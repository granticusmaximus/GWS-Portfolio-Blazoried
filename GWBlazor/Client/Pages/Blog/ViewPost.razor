@page "/viewpost/{postId}"
@inject HttpClient _httpClient
@using GWBlazor.Client.Components
@using GWBlazor.Shared
@layout MainLayout

<Header Heading=@BlogPost.Title Author=@BlogPost.Author PostedDate=@BlogPost.Posted></Header>
<div class="row">
    <div class="col-md-12">
        <NavLink class="btn btn-primary float-right" href="@($"/editpost/{BlogPost.PostID}")">Edit</NavLink>
    </div>
</div>
<article>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                @BlogPost.Content
            </div>
        </div>
    </div>
</article>

@code
{

    [Parameter] public string PostId { get; set; }

    protected Post BlogPost { get; set; } = new Post();

    public async Task OnInitAsync()
    {
        await LoadBlogPost();
    }

    private async Task LoadBlogPost()
    {
        BlogPost = await _httpClient.GetFromJsonAsync<Post>(Urls.BlogPost.Replace("{id}", PostId));
    }
}
